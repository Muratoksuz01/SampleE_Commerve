@model Departman

@{
    Layout="~/Views/Shared/_AdminLeyout.cshtml";
    ViewData["Title"] = "DepartmanGuncelle";
}

<h2>Departman Güncelle</h2>

<form asp-action="DepartmanGuncelle" method="post">
    <input type="hidden" asp-for="DepartmanID" />
    
    <div class="form-group">
        <label asp-for="DepartmanAd" class="control-label"></label>
        <input asp-for="DepartmanAd" class="form-control" />
        <span asp-validation-for="DepartmanAd" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Güncelle" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>