@model List<Cariler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLeyout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Cari ID</th>
                <th>Cari Ad</th>
                <th>Cari Soyad</th>
                <th>Cari Şehir</th>
                <th>Cari Mail</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cari in Model)
            {
                <tr>
                    <td>@cari.CariID</td>
                    <td>@cari.CariAd</td>
                    <td>@cari.CariSoyad</td>
                    <td>@cari.CariSehir</td>
                    <td>@cari.CariMail</td>
                    <td>
                        <!-- Detay Butonu -->
                        <a href="@Url.Action("CariSatisGecmisi", "Cari", new { id = cari.CariID })" class="btn btn-info">Satis Gecmisi</a>
                        
                        <!-- Güncelle Butonu -->
                        <a href="@Url.Action("CariGetir", "Cari", new { id = cari.CariID })" class="btn btn-warning">Güncelle</a>
                        
                        <!-- Sil Butonu -->
                        <a href="@Url.Action("CariSil", "Cari", new { id = cari.CariID })" class="btn btn-danger" >Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <p>Veri bulunamadı.</p>
}
<a href="/Cari/CariEkle" class="btn btn-primary"> yeni cari</a>
