@model List<Urun>
@{
        Layout="~/Views/Shared/_AdminLeyout.cshtml";

    ViewData["Title"] = "Ürün Listesi";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Kategori</th>
            <th>Görsel</th>
            <th>sil</th>
            <th>Guncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunID</td>
                <td>@item.UrunAd</td>
                <td>@item.Marka</td>
                <td>@item.Stok</td>
                <td>@item.AlisFiyat</td>
                <td>@item.SatisFiyat</td>
                <td>@item.Kategori?.KategoriAd</td>
                <td>@item.UrunGorsel</td>
                <td><a href="/Urun/UrunSil/@item.UrunID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-success">Guncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Urun/UrunEkle" class="btn btn-primary" > Urun ekle</a>
