@model List<E_ticaret.Models.Sınıflar.SatisHareket>

@{
    Layout = "~/Views/Shared/_AdminLeyout.cshtml";
    ViewData["Title"] = "Satış Detayları";
}

<h2>Satış Detayları</h2>
@* <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.PersonelAdi'nin Satışları</li>
</ol> *@

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Satisid</td>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat ₺</td>
                <td>@item.ToplamTutar ₺</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
<a asp-action="SatisYazdir" class="btn btn-primary">Yazdır</a>
