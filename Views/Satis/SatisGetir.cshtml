@model SatisHareket

@{
    Layout = "~/Views/Shared/_AdminLeyout.cshtml";
    ViewData["Title"] = "Satış Güncelle";
}

<h2>Satış Güncelle</h2>

<form asp-action="SatisGuncelle" method="post">
    <input type="hidden" asp-for="Satisid" />

    <div class="form-group">
        <label asp-for="Urun" class="control-label">Ürün</label>
        <select asp-for="Urun.UrunID" class="form-control" asp-items="ViewBag.Urunler">
            <option value="">Ürün Seçiniz</option>
        </select>
        <span asp-validation-for="Urun.UrunID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cariler" class="control-label">Cari</label>
        <select asp-for="Cariler.CariID" class="form-control" asp-items="ViewBag.Cariler">
            <option value="">Cari Seçiniz</option>
        </select>
        <span asp-validation-for="Cariler.CariID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Personel" class="control-label">Personel</label>
        <select asp-for="Personel.PersonelID" class="form-control" asp-items="ViewBag.Personeller">
            <option value="">Personel Seçiniz</option>
        </select>
        <span asp-validation-for="Personel.PersonelID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adet" class="control-label">Adet</label>
        <input asp-for="Adet" class="form-control" type="number" required />
        <span asp-validation-for="Adet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fiyat" class="control-label">Fiyat</label>
        <input asp-for="Fiyat" class="form-control" type="number" required />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>

    @* <div class="form-group">
        <label asp-for="ToplamTutar" class="control-label">Toplam Tutar</label>
        <input asp-for="ToplamTutar" class="form-control" type="number" required />
        <span asp-validation-for="ToplamTutar" class="text-danger"></span>
    </div> *@

    <div class="form-group">
        <label asp-for="Tarih" class="control-label">Tarih</label>
        <input asp-for="Tarih" class="form-control" type="date" required />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Güncelle" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>
