@model E_ticaret.Models.Sınıflar.FaturaKalem

@{
    Layout = "~/Views/Shared/_AdminLeyout.cshtml";
    ViewData["Title"] = "Yeni Fatura Kalemi Ekle";
}

<h2>Yeni Fatura Kalemi Ekle</h2>

<form asp-action="FaturaKalemEkle" method="post">
    <div class="form-group">
        <label asp-for="Aciklama" class="control-label">Açıklama</label>
        <input asp-for="Aciklama" class="form-control" required />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Miktar" class="control-label">Miktar</label>
        <input asp-for="Miktar" type="number" class="form-control" required />
        <span asp-validation-for="Miktar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirimFiyat" class="control-label">Birim Fiyat (₺)</label>
        <input asp-for="BirimFiyat" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="BirimFiyat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tutar" class="control-label">Toplam Tutar (₺)</label>
        <input asp-for="Tutar" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Tutar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Faturaid" class="control-label">Fatura</label>
        <select asp-for="Faturaid" class="form-control" required>
            <option value="">Fatura Seçiniz</option>
            @foreach (var fatura in ViewData["Faturalar"] as List<E_ticaret.Models.Sınıflar.Faturalar>)
            {
                <option value="@fatura.FaturaID">@fatura.FaturaSeriNo - @fatura.FaturaSıraNo</option>
            }
        </select>
        <span asp-validation-for="Faturaid" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Fatura Kalemini Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>
