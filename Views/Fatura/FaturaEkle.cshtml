@model E_ticaret.Models.Sınıflar.Faturalar

@{
    Layout = "~/Views/Shared/_AdminLeyout.cshtml";
    ViewData["Title"] = "Yeni Fatura Ekle";
}

<h2>Yeni Fatura Ekle</h2>

<form asp-action="FaturaEkle" method="post">
    <div class="form-group">
        <label asp-for="FaturaSeriNo" class="control-label">Seri No</label>
        <input asp-for="FaturaSeriNo" class="form-control" required />
        <span asp-validation-for="FaturaSeriNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FaturaSıraNo" class="control-label">Sıra No</label>
        <input asp-for="FaturaSıraNo" class="form-control" required />
        <span asp-validation-for="FaturaSıraNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VergiDairesi" class="control-label">Vergi Dairesi</label>
        <input asp-for="VergiDairesi" class="form-control" required />
        <span asp-validation-for="VergiDairesi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tarih" class="control-label">Tarih</label>
        <input asp-for="Tarih" type="date" class="form-control" required />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Saat" class="control-label">Saat</label>
        <input asp-for="Saat" type="time" class="form-control" required />
        <span asp-validation-for="Saat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeslimEden" class="control-label">Teslim Eden</label>
        <input asp-for="TeslimEden" class="form-control" required />
        <span asp-validation-for="TeslimEden" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeslimAlan" class="control-label">Teslim Alan</label>
        <input asp-for="TeslimAlan" class="form-control" required />
        <span asp-validation-for="TeslimAlan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Toplam" class="control-label">Toplam Tutar (₺)</label>
        <input asp-for="Toplam" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Toplam" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Faturayı Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>
